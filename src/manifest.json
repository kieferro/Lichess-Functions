{
  "manifest_version": 2,
  "name": "Lichess-Extension",
  "version": "1.0.5",
  "description": "Lichess, but more useful",
  "icons": {
    "48": "ressources/icon-48.jpg",
    "96": "ressources/icon-96.jpg"
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "*://*.lichess.org/*"
      ],
      "js": [
        "third-party/jquery.js",
        "third-party/glicko2.js",
        "main.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "ressources/lichess-icon.jpg",
    "default_title": "Lichess+",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js",
      "third-party/jquery.js"
    ]
  },
  "permissions": [
    "tabs",
    "<all_urls>",
    "storage"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{4b70cb99-220f-4a8c-9e02-2bc97f0699bd}"
    }
  }
}